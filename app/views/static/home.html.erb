<h1> My Articles</h1>
<div class="container">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12 blog-content jumbotron">
    <% @posts.each do |post| %>
    <div class="col-xs-12">
      <div class="text-center">
      	<li>
      		<%=link_to post.title , post_path(post)%> || <%= truncate(post.content)%>
      	</li>
      </div>
      <br>
    </div>
    <% end %>
  </div>
</div>




