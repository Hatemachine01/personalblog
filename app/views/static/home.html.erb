<h1> My Articles</h1>
<div class="container">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12 blog-content jumbotron">
    <% @posts.each do |post| %>
    <div class="col-xs-12">
      <div class="text-center">
      	<li>
      		<%= post.title %>
      		<%= raw(post.content).truncate(358) %>
      		<%= link_to "Read", post_path(post) %>
      	</li>
      </div>
      <br>
    </div>
    <% end %>
  </div>
</div>

