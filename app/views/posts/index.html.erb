<div class="container">
   <div class="col-sm-10 col-sm-offset-1 col-xs-12 blog-content jumbotron">
 <div class="container">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12 blog-content jumbotron">
    <div class="sticky-note"><%= fa_icon "sticky-note" %></div>
    <% if @posts %>
    <% @posts.each do |post| %>
    <div class="col-xs-12">
      <div class="text-center" id="posts" >
     
        <h4><%= post.title %></h4>
        <%= truncate(post.content, :length => 75 , :escape => false) %> || <%=link_to 'Read more' , post_path(post)%>
        <p>
              <%= link_to "x", post_path(post), method: :delete, data: {confirm: 'Are you sure?' }  %>
        </p>              

     </div>
      <br>
    </div>
    <% end %>
           <div id="paginator">
             <%= paginate @posts, remote: true %>
            </div>
            <% @posts.each do |post| %>
           <div class="container" id="tag_cloud">
                Tags: <%= raw post.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ') %>
                <% tag_cloud Post.tag_counts, %w[s m l] do |tag, css_class| %>
                <% end %>
            </div>
          <% end %>  
  </div>
</div>
  <% else %>

<% end %>

                 


