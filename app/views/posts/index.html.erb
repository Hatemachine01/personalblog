<div class="container">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12 blog-content jumbotron">
    <div class="sticky-note"><%= fa_icon "sticky-note" %></div>
    <% @posts.each do |post| %>
    <div class="col-xs-12">
      <div class="text-center">
  		  <h4><%= post.title %></h4>
        <%= truncate(post.content, :length => 75 , :escape => false) %> || <%=link_to 'Read more' , post_path(post)%> 
		  </div>
      <br>
    </div>
    <% end %>
  </div>
</div>




